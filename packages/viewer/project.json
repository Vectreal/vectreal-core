{
  "name": "vctrl/viewer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/viewer/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": [
          "packages/viewer/**/*.{ts,tsx,js,jsx}",
          "packages/viewer/package.json"
        ]
      }
    },
    "nx-release-publish": {
      "dependsOn": ["copy-md"],
      "options": {
        "packageRoot": "dist/packages/vctrl/viewer"
      }
    },
    "copy-md": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "rsync -rat packages/viewer/*.md dist/packages/vctrl/viewer/"
        ]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/vctrl/viewer",
        "configFile": "packages/viewer/vite.config.ts"
      }
    },
    "chromatic": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm --prefix packages/viewer run chromatic"]
      }
    }
  }
}
